---
import { getCollection } from "astro:content"

import BaseLayout from "@layouts/BaseLayout.astro"

import Metadata from "@components/Metadata.astro"
import Headline from "@components/Headline.astro"
import Description from "@components/Description.astro"

const posts = (await getCollection("blog"))
	.sort((a, b) => {
		return (
			new Date(b.data.pubDate).valueOf() -
			new Date(a.data.pubDate).valueOf()
		)
	})
	.map((post) => post.data)
---

<BaseLayout
	title="Thoughts & Insights â€“ alexander.trefz.me"
	description="A blog full of opinions on all things software."
>
	<article class="blog">
		<div class="title">
			<Headline>Thoughts & Insights</Headline>
			<Description
				>Sharing my opinions about all things software</Description
			>
		</div>

		<ul>
			{
				posts.map((post) => {
					return (
						<li>
							<a href={`/blog/${post.slug}/`}>
								<article>
									<h2 transition:name={`title-${post.slug}`}>
										{post.title}
									</h2>
									<Metadata
										pubDate={post.pubDate}
										readingTime={post.readingTime}
										slug={post.slug}
									/>
								</article>
							</a>
						</li>
					)
				})
			}
		</ul>
	</article>
</BaseLayout>

<style lang="scss">
	.blog {
		display: grid;
		gap: 50px;

		.title {
			display: grid;
			gap: 10px;
		}
	}

	ul {
		display: grid;
		gap: 60px;

		li {
			text-align: center;

			a {
				position: relative;
				display: inline-block;
				cursor: pointer;
				color: var(--color-foreground);

				text-decoration: none;

				&:hover article h2 {
					text-decoration-color: var(--color-highlight-medium);
				}

				&::before {
					opacity: 0;
					pointer-events: none;
					content: "";
					position: absolute;
					inset: -12px;
					border-radius: 5px;
					border: 1px solid var(--color-highlight-intense);
					background: var(--color-highlight-focus);

					transition: opacity linear 200ms;
				}

				&:focus-visible {
					outline: none;
					box-shadow: none;

					&::before {
						opacity: 1;
					}
				}

				article {
					display: grid;
					gap: 10px;
					justify-items: center;

					h2 {
						font-family: var(--font-article-title);
						font-size: calc(var(--base-font-size) * 1.4);
						font-weight: 400;

						line-height: 1.3;

						text-decoration: underline;
						text-decoration-color: transparent;
						transition: text-decoration-color ease-in-out 250ms;
					}
				}
			}
		}
	}
</style>
